<html>

<head>
<% include ../head_scripts %>
</head>

<body>
<% include ../head %>
<!--************************CONTENT**************************-->


<h1><%=team.name%> Team Roster</h1>

   		<div id="roster" class="form-inline">
	    	<table data-role="table" id="roster-table" data-mode="reflow" class="ui-responsive table-stroke">
	    		<thead>
	    			<tr>
	    				<th>First Name</th>
	    				<th>Last Name</th>
	    				<th></th>
	    				<th></th>
	    			</tr>
	    		</thead>
	    		<tbody>
	    		<% players.forEach(function(p){ %>

	    			<tr>
	    				<td>
					        <%= p.first_name %>
					    </td>
					    <td>
					        <%= p.last_name %>
					    </td>
					    <td>
							<a href="/players/<%=p._id%>">view player</a>
						</td>

					    <td>
					    	<form method='post' action="/teams/<%= team._id%>/players/<%= p._id%>/remove" data-ajax="false">
								<button type="Submit" data-mini="true" data-inline="true" data-icon="delete">Remove</button>
							</form>
					    </td>
					</tr>

				<% }); %>
				</tbody>
				</table>
			<div id="roster-list2">

			</div>
		</div>
		<br><br>

        <div class="form-group center-this">
              <button type="button" id="add_row2" class="btn btn-default" data-inline="true" data-theme="b">Add More Players</button>
              <hr>
        </div>

        <div class="form-group center-this">
              <button disabled="disabled" type="button" id="submit2" data-inline="true">Submit Roster</button>
        </div>












<!--***********************END OF CONTENT************************-->
<% include ../footer %>
</body>

</html>